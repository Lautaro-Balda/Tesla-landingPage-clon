---
const { color, title, subtitle } = Astro.props;
const textColor = `text-${color}`;
---

<section
   class="landing-section bg-black h-screen w-screen overflow-hidden text-center relative"
   data-header-color={color}
>
   <div class="relative pt-[6rem] z-30 h-full flex flex-col">
      <header>
         <h2 class={`${textColor} text-[39px] font-medium`}>
            {title}
         </h2>
         <p class={`${textColor} text-sm`}>
            {subtitle}
         </p>
      </header>

      <footer class="flex flex-col flex-grow justify-end pb-20">
         <slot name="footer" />
      </footer>
   </div>

   <div class="absolute top-0 bottom-0 z-10">
      <slot name="background" />
   </div>
</section>
